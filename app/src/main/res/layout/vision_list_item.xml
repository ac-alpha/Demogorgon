<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/vision_list_item_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="150dp"
    android:layout_width="match_parent"
    android:layout_margin="@dimen/views_padding"
    android:background="@drawable/list_item_shape">

    <ImageView
        android:id="@+id/image_view_vision"
        android:layout_width="0dp"
        android:layout_weight="2"
        android:layout_height="150dp"
        android:scaleType="centerCrop"
        android:padding="@dimen/views_padding"
        android:layout_marginLeft="25dp"
        />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="150dp"
        android:padding="@dimen/views_padding"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <TextView
            android:id="@+id/text_view_rescuer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Rescuer Name"
            android:textColor="@color/colorPrimaryLight"
            android:textSize="@dimen/heading_font_size"/>

        <TextView
            android:id="@+id/text_view_whether_rescued"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="Rescued or not"
            android:textSize="@dimen/sub_heading_font_size"/>

    </LinearLayout>

</LinearLayout>