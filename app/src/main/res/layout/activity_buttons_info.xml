<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/buttons_info_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context="com.example.ashutoshchaubey.demogorgon.ButtonsInfoActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/buttons_info"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="225dp"
        android:layout_marginStart="33dp"
        android:text="@string/click_anywhere"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/sub_heading_font_size" />
</RelativeLayout>
