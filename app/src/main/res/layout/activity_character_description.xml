<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.ashutoshchaubey.demogorgon.CharacterDescriptionActivity"
    android:background="@color/colorPrimaryLight">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/views_padding">

        <TextView
            android:id="@+id/character_activity_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/heading_font_size"
            tools:text="CharacterName"
            android:gravity="center_horizontal"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="@dimen/views_padding">

            <ImageView
                android:id="@+id/character_activity_image"
                android:layout_width="300dp"
                android:layout_height="300dp"
                android:scaleType="centerCrop"
                tools:src="@drawable/dustinhenderson"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@android:color/black"
                android:textSize="@dimen/sub_heading_font_size"
                android:text="@string/number_of_rescues" />

            <TextView
                android:id="@+id/character_activity_number_of_rescues"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/fab_margin"
                android:textColor="@android:color/black"
                android:textSize="@dimen/sub_heading_font_size"
                tools:text="Dummy Number" />

        </LinearLayout>

        <TextView
            android:id="@+id/character_activity_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sub_heading_font_size"
            tools:text="@string/lorem_ipsum" />

    </LinearLayout>

</ScrollView>
